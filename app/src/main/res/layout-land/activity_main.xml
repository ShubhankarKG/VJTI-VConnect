<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:src="@drawable/download"
        android:id="@+id/vjti"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="236dp"
        android:src="@drawable/coc"
        android:id="@+id/coc"/>

    <ImageButton
        android:id="@+id/sra"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_alignBottom="@+id/coc"
        android:layout_marginLeft="39dp"
        android:layout_toRightOf="@id/coc"
        android:src="@drawable/sra" />



    <ImageButton
        android:id="@+id/prati"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignLeft="@id/sra"
        android:layout_alignRight="@id/sra"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/prati" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/coc"
        android:layout_alignTop="@id/prati"
        android:layout_alignRight="@id/coc"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-21dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/aerovjti" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:hint="LOGIN"
        />



    
</RelativeLayout>